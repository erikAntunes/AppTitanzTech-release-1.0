<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    tools:context=".view.DestalhesServicosActivity">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/detalhes_servicos_circleImageView"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/titanz_icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </de.hdodenhof.circleimageview.CircleImageView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:background="@color/colorPrimary"
        android:layout_marginStart="22dp"
        android:layout_marginEnd="22dp"
        android:layout_marginTop="10dp"
        android:padding="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nome_detalhes_servico_textView"
        app:layout_constraintVertical_bias="0.0">

        <TextView
            android:id="@+id/detalhes_servico_textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:padding="15dp"
            android:text="Só salve quebrada vamos testar essa bagaça \n Mais uma linha sem informação decente \n muito bem ta tudo certo \n Só salve quebrada vamos testar essa bagaça \n Mais uma linha sem informação decente \n muito bem ta tudo certo \n Só salve quebrada vamos testar essa bagaça \n Mais uma linha sem informação decente \n muito bem ta tudo certo \n Só salve quebrada vamos testar essa bagaça \n Mais uma linha sem informação decente \n muito bem ta tudo certo"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="23sp" />


    </ScrollView>

    <TextView
        android:id="@+id/nome_detalhes_servico_textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:gravity="center"
        android:text="TITANZ TECH"
        android:textColor="@color/colorPrimary"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/detalhes_servicos_circleImageView" />

</androidx.constraintlayout.widget.ConstraintLayout>